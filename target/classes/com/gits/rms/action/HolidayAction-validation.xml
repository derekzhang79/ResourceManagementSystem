<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC
    "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
    "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
    
<validators>
 
<field name="holiday.holidayDescription">
  	<field-validator type="requiredstring">
  		<param name="trim">true</param>
   		<message key="errors.holiday.description"></message>
  	</field-validator>
</field>
 
<field name="holiday.holidayDate">
  <field-validator type="required">
   		<message key="errors.holiday.date"></message>
  </field-validator>
  <field-validator type="date">
	  	<param name="min">1/2/1970</param>
   		<message key="errors.common.date.invalid"></message>
  </field-validator>
</field>
</validators>