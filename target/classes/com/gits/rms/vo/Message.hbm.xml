<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
     <class name="com.gits.rms.vo.MessageVO" table="hcmo_message">
     <id
        name="hcmoMessageId"
        type="integer"
        column="HcmoMessageId"
        length="11"
       >
        <generator class="native" />
    </id>
    <property 
     name="clientId"
     type="integer"
     column="HcmoClientId"
     length="11" 
     />
    <property
        name="receiver"
        type="string"
        column="Receiver"
        length="255"
    />
    <property
        name="receiverEmailId"
        type="text"
        column="ReceiverEmailId"
    />
    <property
        name="cc"
        type="string"
        column="Cc"
        length="255"
    />
     <property
        name="ccEmailId"
        type="text"
        column="CcEmailId"
    />
    <property
        name="bcc"
        type="string"
        column="Bcc"
        length="255"
    />
     <property
        name="bccEmailId"
        type="text"
        column="BccEmailId"
    />
    <property
        name="subject"
        type="string"
        column="Subject"
        length="255"
    />
    <property
        name="message"
        type="text"
        column="Message"
    />
    <property
        name="signature"
        type="text"
        column="Signature"
    />
    <property
        name="DeletedReceiverId"
        type="string"
        column="deletedReceiverId"
        length="255"
    />
    <property
        name="DeletedCcId"
        type="string"
        column="deletedCcId"
        length="255"
    />
    <property
        name="DeletedBccId"
        type="string"
        column="deletedBccId"
        length="255"
    />
    <property
        name="type"
        type="string"
        column="Type"
        length="20"
    />
    <property
        name="isRead"
        type="integer"
        column="IsRead"
        length="1"
    />
    <property 
    	name="receiverDelete"
    	type="integer"
    	column="ReceiverDelete"
    	length="1"
    />
    <property 
    	name="senderDelete"
    	type="integer"
    	column="SenderDelete"
    	length="1"
    />
    <property 
    	name="isNewMail"
    	type="integer"
    	column="IsNewMail"
    	length="1"
    />
     <property
        name="created"
        type="date"
        column="Created"
    />
     <property
        name="updated"
        type="timestamp"
        column="Updated"
    />
    <property
        name="isActive"
        type="integer"
        column="IsActive"
        length="1"
    />
    
<many-to-one name="sender" column="sender" lazy="false" class="com.gits.rms.vo.EmployeesVO"/>
<many-to-one name="createdBy" column="CreatedBy" lazy="false" class="com.gits.rms.vo.EmployeesVO"/>
<many-to-one name="updatedBy" column="UpdatedBy" lazy="false" class="com.gits.rms.vo.EmployeesVO"/>

 </class>
</hibernate-mapping>