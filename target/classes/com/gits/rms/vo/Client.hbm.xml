<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 	<class name="com.gits.rms.vo.ClientVO" table="hcmo_client">
  		<id 
  			name="hcmoclientId" 
  			length="11" 
  			column="HcmoClientId" 
  			type="integer">
   			<generator class="native"/>
  		</id>
		<property
	        name="companyName"
        	type="string"
        	column="CompanyName"
        	length="60"
    	/>
		<property
	        name="noOfEmp"
        	type="integer"
        	column="NoOfEmployee"
        	length="11"
    	/>
    	<property
	        name="noOfBranch"
        	type="integer"
        	column="NoOfBranch"
        	length="11"
    	/>
	    <property
	        name="address1"
	        type="string"
	        column="Address1"
	        length="60"
	    />
	    <property
	        name="address2"
	        type="string"
	        column="Address2"
	        length="60"
	    />
	    <property
	        name="zipcode"
	        type="string"
	        column="ZipCode"
	        length="20"
	    />
	    <property
	        name="state"
	        type="string"
	        column="Region"
	        length="60"
	    />
	    <property
	        name="city"
	        type="string"
	        column="City"
	        length="100"
	    />
	    <property
	        name="phone"
	        type="string"
	        column="Phone"
	        length="20"
	    />
	    <property
	        name="taxId"
	        type="string"
	        column="TaxId"
	        length="30"
	    />
	    <property
	        name="fax"
	        type="string"
	        column="Fax"
	        length="20"
	    />
	    <property
	        name="comments"
	        type="text"
	        column="Comments"
	    />
	    <property
	        name="logoName"
	        type="string"
	        column="LogoName"
	        length="100"
	    />
		<property
	        name="created"
	        type="date"
	        column="Created"
	    />
	     <property
	        name="updated"
	        type="timestamp"
	        column="Updated"
	    />
	    <property
	        name="isActive"
	        type="integer"
	        column="IsActive"
	        length="1"
	    />
<many-to-one name="createdBy" column="CreatedBy" lazy="false" class="com.gits.rms.vo.EmployeesVO"/>
<many-to-one name="updatedBy" column="UpdatedBy" lazy="false" class="com.gits.rms.vo.EmployeesVO"/>    
<many-to-one name="country" column="HcmoCountryId" lazy="false" class="com.gits.rms.vo.CountryVO"/>   	
 </class>
</hibernate-mapping>
